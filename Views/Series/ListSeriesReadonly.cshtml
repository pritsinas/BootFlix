@*@model IEnumerable<BootFlixBC7.Models.Serie>*@

@{
    ViewBag.Title = "Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Series</h2>
<table id="serie" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Serie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            let table = $("#serie").DataTable({
                ajax: {
                    url: "/api/series",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}

