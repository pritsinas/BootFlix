@model BootFlixBC7.ViewModels.ViewerFormViewModel
@{
    /**/

    ViewBag.Title = "ViewerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Viewer Form</h2>
@using (Html.BeginForm("Save", "Viewers"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Viewer.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Viewer.Name)
        @Html.TextBoxFor(m => m.Viewer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Viewer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Viewer.BirthDate)
        @Html.TextBoxFor(m => m.Viewer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor( m => m.Viewer.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Viewer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Viewer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "SubscriptionType"), "Select Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Viewer.MembershipTypeId)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Viewer.IsSubscribedToNewsLetter) Subscribed To News?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

