@model BootFlixBC7.Models.Viewer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Viewer Details</h2>
<h2>@Model.Name</h2>

<ul>
    <li>Subscription Type: @Model.MembershipType.SubscriptionType</li>
    @if (Model.BirthDate.HasValue)
    {
        <li>Birthdate: @Model.BirthDate.Value.ToLongDateString()</li>
    }
    else
    {
        <li>Birthdate: Unknown</li>
    }
</ul>

